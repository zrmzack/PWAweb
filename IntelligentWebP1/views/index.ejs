<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/styles/inline.css">
    <script src="/scripts/jquery.min.js"></script>
    <script src="/scripts/bootstrap.min.js"></script>
    <script src="/scripts/index.js"></script>
    <script src="/scripts/imageupload.js"></script>


</head>
<body onload="initHappySharing()">
<div class="box">
    <div class="login-content ">
        <div class="form">
            <form id="modifyPassword" class="form-horizontal" onsubmit="onSubmit('/index')">
                <div class="input-group">
                                        <span class="input-group-addon"><span
                                                class="glyphicon glyphicon-user"></span></span>
                    <input type="text" id="username" name="username"
                           placeholder="username" size="10">
                </div>
                <div class="form-group">
                    <div class="form-text">
                                    <textarea id="story" name="story"
                                              placeholder="input your stories" value="" rows="10" maxlength="500">
                                    </textarea>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">picture</label>
                    <div class="layui-input-block">
                        <input type="hidden" id="img1_url" name="img1_url">
                        <input type="file" onchange="showImg1()" onclick="upload()" id="img1_file"><img src="" alt=""
                                                                                                        id="img_id1"
                                                                                                        style="width: 100px">

                        <input type="hidden" id="img2_url" name="img2_url">
                        <input type="file" onchange="showImg2()" onclick="upload2()" id="img2_file"><img src="" alt=""
                                                                                                         id="img_id2"
                                                                                                         style="width: 100px">

                        <input type="hidden" id="img3_url" name="img3_url">
                        <input type="file" onchange="showImg3()" onclick="upload3()" id="img3_file"><img src="" alt=""
                                                                                                         id="img_id3"
                                                                                                         style="width: 100px">

                    </div>
                </div>


                <div class="form-group form-actions">
                    <input type="submit" name="g" value="Submit" id="g" onclick="getdata()">
                </div>

            </form>
        </div>
    </div>
</div>
</div>
<div id="main">
    <div id="list">
        <ul>
            <li>

                <div id="result"></div>
                <div id="results_username"></div>
                <div id="results_story"></div>
                <div id="results_date"></div>
                <div id="results_img1"></div>
                <div id="results_img2"></div>
                <div id="results_img3"></div>
                <div class="po-cmt">
                    <div class="po-hd">
                        <div></div>

                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>


</div>
<script src="/scripts/app.js"></script>
<script src="/scripts/database.js"></script>
<script src="/scripts/idb.js"></script>
</body>
</html>
